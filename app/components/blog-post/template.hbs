<article>

    {{#if isEditing}}
        <h4>
            <em>Editing {{attrs.post.title}}</em>
        </h4>
        <br>
        <p>
            <label for="edit_post_title">Title:</label>
            {{input value=attrs.post.title id="edit_post_title" placeholder="Title"}}
        </p>
        <p>
            <label for="edit_post_author">Author:</label>
            {{input value=attrs.post.author id="edit_post_author" placeholder="Author"}}
        </p>
        <p>
            <label for="edit_post_text">Text:</label>
            {{textarea value=attrs.post.text id="edit_post_text" placeholder="Content" rows="10"}}
        </p>
        <p class="pull-right">
            <button {{action "rollback" post}}>Cancel</button>
            <button {{action "updatePost" post}}>Update</button>
        </p>

    {{else}}

        {{#if fullpost}}
            <h2>{{attrs.post.title}}</h2>
            <p>{{break-lines attrs.post.text}}</p>
        {{else}}
            {{#link-to 'post' attrs.post}}
                <h2>{{attrs.post.title}}</h2>
                <p>{{break-lines this.summary}}</p>
            {{/link-to}}
        {{/if}}

        <p class="pull-right mtm3">
            {{#if fullpost}}
                <button class="pull-right" {{action 'edit'}}>Edit</button>
            {{else}}
                {{#link-to 'post' attrs.post}}
                    <button class="pull-right">Read More</button>
                {{/link-to}}
            {{/if}}
        </p>

        <em>
            {{#if attrs.post.updatedDate}}
                Updated on {{moment attrs.post.updatedDate 'LLLL'}}
            {{else}}
                Posted on {{moment attrs.post.createdDate 'LLLL'}}
            {{/if}}

            by {{attrs.post.author}}
        </em>

    {{/if}}

    <br>
    <br>
    <br>

    <hr>

</article>